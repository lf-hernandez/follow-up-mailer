{
  "name": "follow-up-mailer",
  "version": "0.1.0",
  "description": "Automated follow-up mailer",
  "main": "dist/main.js",
  "pkg": {
    "scripts": "dist/*.js"
  },
  "bin": "dist/main.js",
  "private": true,
  "scripts": {
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "compile": "tsc",
    "build": "pkg . -t node14-win-x64",
    "lint": "eslint . --ext .ts --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lf-hernandez/follow-up-mailer.git"
  },
  "keywords": [],
  "author": "",
  "license": "",
  "bugs": {
    "url": "https://github.com/lf-hernandez/follow-up-mailer/issues"
  },
  "homepage": "https://github.com/lf-hernandez/follow-up-mailer#readme",
  "devDependencies": {
    "@types/bunyan": "^1.8.6",
    "@types/commander": "^2.12.2",
    "@types/csvtojson": "^1.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/inquirer": "^7.3.0",
    "@types/node": "^14.0.27",
    "@types/nodemailer": "^6.4.0",
    "@types/ora": "^3.2.0",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "bunyan": "^1.8.14",
    "chalk": "^4.1.0",
    "csvtojson": "^2.0.10",
    "dotenv": "^8.2.0",
    "inquirer": "^7.3.3",
    "nodemailer": "^6.4.16",
    "ora": "^5.0.0",
    "validator": "^13.1.1"
  }
}
